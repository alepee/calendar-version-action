{
    "name": "calendar-version-action",
    "version": "1.0.0",
    "description": "GitHub Action for Calendar Versioning",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc && ncc build src/index.ts -o dist --license licenses.txt",
        "test": "jest --coverage=false",
        "test:coverage": "jest --coverage",
        "lint": "eslint . --ext .ts",
        "prepare": "husky install",
        "pre-commit": "npm run build && git add dist",
        "type-check": "tsc --noEmit"
    },
    "keywords": [
        "github",
        "actions",
        "versioning",
        "calver"
    ],
    "author": {
        "name": "Antoine Lépée",
        "email": "service+gh@antoine.io",
        "url": "https://github.com/alepee"
    },
    "contributors": [
        {
            "name": "Claude",
            "email": "claude@anthropic.com",
            "url": "https://claude.ai"
        }
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alepee/calendar-version-action.git"
    },
    "bugs": {
        "url": "https://github.com/alepee/calendar-version-action/issues"
    },
    "homepage": "https://github.com/alepee/calendar-version-action#readme",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.10.1",
        "@actions/exec": "^1.1.1",
        "@actions/github": "^6.0.0",
        "date-fns": "^3.3.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.17",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vercel/ncc": "^0.38.1",
        "eslint": "^8.56.0",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
